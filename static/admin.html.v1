<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moustique - Admin</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
            min-height: 100vh;
        }

        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .login-box {
            background: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            max-width: 400px;
            width: 100%;
        }

        .login-box h1 {
            color: #667eea;
            margin-bottom: 10px;
            font-size: 2em;
        }

        .login-box p {
            color: #666;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #333;
            font-weight: 500;
        }

        .form-group input {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 1em;
            transition: border-color 0.3s;
        }

        .form-group input:focus {
            outline: none;
            border-color: #667eea;
        }

        .btn-login {
            width: 100%;
            background: #667eea;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 8px;
            font-size: 1em;
            cursor: pointer;
            transition: background 0.3s;
        }

        .btn-login:hover {
            background: #5568d3;
        }

        .error-msg {
            background: #fee;
            color: #c33;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: none;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
            display: none;
        }

        header {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-left h1 {
            color: #667eea;
            font-size: 2.5em;
            margin-bottom: 5px;
        }

        .subtitle {
            color: #666;
            font-size: 1.1em;
        }

        .logout-btn {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.9em;
        }

        .logout-btn:hover {
            background: #c0392b;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.95);
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-label {
            color: #666;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }

        .stat-value {
            color: #667eea;
            font-size: 2.5em;
            font-weight: bold;
        }

        .stat-subvalue {
            color: #999;
            font-size: 0.9em;
            margin-top: 5px;
        }

        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .tab {
            background: rgba(255, 255, 255, 0.9);
            border: none;
            padding: 15px 30px;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1em;
            transition: all 0.3s;
            color: #666;
        }

        .tab:hover {
            background: rgba(255, 255, 255, 1);
        }

        .tab.active {
            background: #667eea;
            color: white;
        }

        .content-box {
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            display: none;
        }

        .content-box.active {
            display: block;
        }

        .item-list {
            max-height: 600px;
            overflow-y: auto;
        }

        .list-item {
            padding: 15px;
            border-bottom: 1px solid #eee;
            transition: background 0.2s;
        }

        .list-item:hover {
            background: #f8f9fa;
        }

        .item-title {
            font-weight: bold;
            color: #667eea;
            margin-bottom: 5px;
            word-break: break-all;
        }

        .item-meta {
            color: #999;
            font-size: 0.9em;
        }

        .refresh-btn {
            background: #667eea;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1em;
            margin-bottom: 20px;
            transition: background 0.3s;
        }

        .refresh-btn:hover {
            background: #5568d3;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #999;
        }

        .error {
            background: #fee;
            color: #c33;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .live-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            background: #4ade80;
            border-radius: 50%;
            margin-left: 10px;
            animation: pulse 2s infinite;
        }

        pre {
            background: #f5f5f5;
            padding: 15px;
            border-radius: 8px;
            overflow-x: auto;
            line-height: 1.6;
        }
    </style>
</head>
<body>
    <!-- Login Screen -->
    <div id="login-screen" class="login-container">
        <div class="login-box">
            <h1>ðŸ¦Ÿ Moustique</h1>
            <p>Admin Access</p>
            <div id="login-error" class="error-msg"></div>
            <form id="login-form" onsubmit="return handleLogin(event)">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required autocomplete="current-password">
                </div>
                <button type="submit" class="btn-login">Login</button>
            </form>
        </div>
    </div>

    <!-- Main Dashboard -->
    <div id="dashboard" class="container">
        <header>
            <div class="header-left">
                <h1>ðŸ¦Ÿ Moustique</h1>
                <p class="subtitle">MQTT over HTTP Broker <span class="live-indicator"></span></p>
            </div>
            <button class="logout-btn" onclick="logout()">Logout</button>
        </header>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-label">Total Requests</div>
                <div class="stat-value" id="total-requests">-</div>
                <div class="stat-subvalue" id="req-per-sec">- req/s</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Messages Processed</div>
                <div class="stat-value" id="total-messages">-</div>
                <div class="stat-subvalue" id="msg-per-sec">- msg/s</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Active Clients</div>
                <div class="stat-value" id="active-clients">-</div>
                <div class="stat-subvalue" id="active-posters">- posters</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Topics</div>
                <div class="stat-value" id="total-topics">-</div>
                <div class="stat-subvalue" id="goroutines">- goroutines</div>
            </div>
        </div>

        <div class="tabs">
            <button class="tab active" onclick="showTab('topics', event)">Topics</button>
            <button class="tab" onclick="showTab('clients', event)">Clients</button>
            <button class="tab" onclick="showTab('posters', event)">Posters</button>
            <button class="tab" onclick="showTab('about', event)">About</button>
        </div>

        <div id="topics-content" class="content-box active">
            <button class="refresh-btn" onclick="loadTopics()">ðŸ”„ Refresh Topics</button>
            <div id="topics-list" class="item-list">
                <div class="loading">Loading topics...</div>
            </div>
        </div>

        <div id="clients-content" class="content-box">
            <button class="refresh-btn" onclick="loadClients()">ðŸ”„ Refresh Clients</button>
            <div id="clients-list" class="item-list">
                <div class="loading">Loading clients...</div>
            </div>
        </div>

        <div id="posters-content" class="content-box">
            <button class="refresh-btn" onclick="loadPosters()">ðŸ”„ Refresh Posters</button>
            <div id="posters-list" class="item-list">
                <div class="loading">Loading posters...</div>
            </div>
        </div>

        <div id="about-content" class="content-box">
            <h2 style="margin-bottom: 20px;">About Moustique</h2>
            <p style="line-height: 1.6; margin-bottom: 15px;">
                <strong>Moustique</strong> is a lightweight MQTT-style pub/sub broker that uses HTTP for communication.
            </p>
            <h3 style="margin: 20px 0 10px 0;">Key Features:</h3>
            <ul style="line-height: 2; margin-left: 20px;">
                <li>âœ… HTTP-based communication</li>
                <li>âœ… Wildcard subscriptions (+, #)</li>
                <li>âœ… Persistent message storage</li>
                <li>âœ… Built-in web administration</li>
                <li>âœ… High performance with Go</li>
            </ul>
        </div>
    </div>

    <script>
        let statsInterval;
        let password = '';
        const API_BASE = window.location.origin;

        // ROT13+Base64 encoding (matching Go implementation)
        function rot13(str) {
            return str.replace(/[a-zA-Z]/g, function(c) {
                return String.fromCharCode(
                    (c <= 'Z' ? 90 : 122) >= (c = c.charCodeAt(0) + 13) ? c : c - 26
                );
            });
        }

        function encode(str) {
            return rot13(btoa(str));
        }

        function decode(str) {
            return atob(rot13(str));
        }

        function handleLogin(event) {
            event.preventDefault();
            const pwd = document.getElementById('password').value;
            
            // Test password by trying to fetch stats
            fetch(`${API_BASE}/STATS`, {
                method: 'POST',
                headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                body: `pwd=${encode(pwd)}`
            })
            .then(response => {
                if (response.ok) {
                    return response.text();
                }
                throw new Error('Invalid password');
            })
            .then(() => {
                password = pwd;
                sessionStorage.setItem('moustique_pwd', pwd);
                showDashboard();
            })
            .catch(error => {
                const errorEl = document.getElementById('login-error');
                errorEl.textContent = 'Invalid password';
                errorEl.style.display = 'block';
            });
            
            return false;
        }

        function logout() {
            password = '';
            sessionStorage.removeItem('moustique_pwd');
            clearInterval(statsInterval);
            document.getElementById('dashboard').style.display = 'none';
            document.getElementById('login-screen').style.display = 'flex';
        }

        function showDashboard() {
            document.getElementById('login-screen').style.display = 'none';
            document.getElementById('dashboard').style.display = 'block';
            loadStats();
            loadTopics();
            statsInterval = setInterval(loadStats, 5000);
        }

        function showTab(tabName, event) {
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            event.target.classList.add('active');

            document.querySelectorAll('.content-box').forEach(box => box.classList.remove('active'));
            document.getElementById(tabName + '-content').classList.add('active');

            if (tabName === 'topics') loadTopics();
            if (tabName === 'clients') loadClients();
            if (tabName === 'posters') loadPosters();
        }

        async function loadStats() {
            try {
                const response = await fetch(`${API_BASE}/STATS`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: `pwd=${encode(password)}`
                });
                
                const encoded = await response.text();
                const decoded = decode(encoded);
                const stats = JSON.parse(decoded);

                document.getElementById('total-requests').textContent = stats.requests.total.toLocaleString();
                document.getElementById('req-per-sec').textContent = stats.requests.per_second.toFixed(2) + ' req/s';
                document.getElementById('total-messages').textContent = stats.requests.processed.total.toLocaleString();
                document.getElementById('msg-per-sec').textContent = stats.requests.processed.per_second.toFixed(2) + ' msg/s';
                document.getElementById('active-clients').textContent = stats.clients.subscribers.toLocaleString();
                document.getElementById('active-posters').textContent = stats.clients.posters.toLocaleString() + ' posters';
                document.getElementById('total-topics').textContent = stats.subscription_count.toLocaleString();
                document.getElementById('goroutines').textContent = stats.goroutines + ' goroutines';
            } catch (error) {
                console.error('Failed to load stats:', error);
                if (error.message.includes('401')) {
                    logout();
                }
            }
        }

        async function loadTopics() {
            const container = document.getElementById('topics-list');
            container.innerHTML = '<div class="loading">Loading topics...</div>';

            try {
                const response = await fetch(`${API_BASE}/TOPICS`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: `pwd=${encode(password)}`
                });
                
                const encoded = await response.text();
                const decoded = decode(encoded);
                const topics = JSON.parse(decoded);

                if (topics.length === 0) {
                    container.innerHTML = '<div class="loading">No topics found</div>';
                    return;
                }

                container.innerHTML = topics.sort().map(topic => `
                    <div class="list-item">
                        <div class="item-title">${topic}</div>
                    </div>
                `).join('');
            } catch (error) {
                container.innerHTML = '<div class="error">Failed to load topics</div>';
            }
        }

        async function loadClients() {
            const container = document.getElementById('clients-list');
            container.innerHTML = '<div class="loading">Loading clients...</div>';

            try {
                const response = await fetch(`${API_BASE}/CLIENTS`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: `pwd=${encode(password)}`
                });
                
                const encoded = await response.text();
                const decoded = decode(encoded);
                const clients = JSON.parse(decoded);

                if (clients.length === 0) {
                    container.innerHTML = '<div class="loading">No clients found</div>';
                    return;
                }

                container.innerHTML = clients.sort().map(client => `
                    <div class="list-item">
                        <div class="item-title">${client}</div>
                        <div class="item-meta">Active subscriber</div>
                    </div>
                `).join('');
            } catch (error) {
                container.innerHTML = '<div class="error">Failed to load clients</div>';
            }
        }

        async function loadPosters() {
            const container = document.getElementById('posters-list');
            container.innerHTML = '<div class="loading">Loading posters...</div>';

            try {
                const response = await fetch(`${API_BASE}/POSTERS`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/x-www-form-urlencoded'},
                    body: `pwd=${encode(password)}`
                });
                
                const encoded = await response.text();
                const decoded = decode(encoded);
                const posters = JSON.parse(decoded);

                if (posters.length === 0) {
                    container.innerHTML = '<div class="loading">No posters found</div>';
                    return;
                }

                container.innerHTML = posters.sort().map(poster => `
                    <div class="list-item">
                        <div class="item-title">${poster}</div>
                        <div class="item-meta">Message publisher</div>
                    </div>
                `).join('');
            } catch (error) {
                container.innerHTML = '<div class="error">Failed to load posters</div>';
            }
        }

        // Check if already logged in
        window.onload = function() {
            const savedPwd = sessionStorage.getItem('moustique_pwd');
            if (savedPwd) {
                document.getElementById('password').value = savedPwd;
                handleLogin({preventDefault: () => {}});
            }
        };
    </script>
</body>
</html>
